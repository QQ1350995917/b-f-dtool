<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dingpw.tool.installer.InstallerMainActivity">

    <TextView
            android:id="@+id/tv_title"
            android:text="@string/string_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
    <TextView
            android:id="@+id/tv_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:background="@drawable/btn_lock_normal"
            android:hint="@string/string_select"/>
    <Button
            android:id="@+id/bt_installer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_install"
            android:background="@drawable/btn_lock_normal"
            android:layout_below="@id/tv_location"
            android:textColor="#FFFFFF"/>


</RelativeLayout>
